html,body{
    height: 100%;
    background: #212528;
}
ul,li{
    padding: 0;
    margin: 0;
    list-style: none;
}
b{
    font-weight: normal;
}

.clear-fixed:after{
    content:"";
    display: block;
    height: 0;
    clear: both;
}
/* common style */
.panel-title{
    background: #25292f;
    color: #fff;
    padding: 0 10px;
    height: 36px;
    line-height: 36px;
    user-select: none;
}
.panel-title i{
    vertical-align: middle;
    font-size: 20px;
    margin-right: 5px;
}
.panel-title span{
    vertical-align: middle;
    font-size: 14px;
}

/* header style */
.header{
    height: 40px;
    line-height: 40px;
    background: #2d2d2d;
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.header .header-left{
    position: absolute;
    top: 8px;
    left: 20px;
}
.header-left .header-icon,
.header-right .header-icon{
    float: left;
}
.header-left .icon-group{
    margin-left: 10px;
    float: left;
}
.icon-group .header-icon{
    margin-right: -1px;
}
.header .header-title{
    width: 500px;
    margin: 0 auto;
    text-align: center;
}
.header-title i.iconfont{
    font-size: 18px;
    margin-right: 5px;
    vertical-align: bottom;
}
.header .header-right{
    position: absolute;
    top: 8px;
    right: 20px;
}
.header-right .header-icon{
    margin: 0 5px;
}

.header-icon{
    display: block;
    width: 24px;
    height: 24px;
    text-align: center;
    line-height: 24px;
    border: 1px solid #fff;
    cursor: pointer;
}
.header-icon.checked{
    background: #1c6dff;
}

/* setting-panel style配置 */
.setting-panel{
    position: absolute;
    top: 40px;
    width: 300px;
    background: #141719;
    height: calc(100vh - 40px);
}
.setting-panel.status01{
    right: 0;
    transition: right 1s ease;
    -webkit-transition: right 1s ease;
    -moz-transition: right 1s ease;
    -ms-transition: right 1s ease;
    -o-transition: right 1s ease;
}
.setting-panel.status02{
    right: -300px;
    transition: right 1s ease;
    -webkit-transition: right 1s ease;
    -moz-transition: right 1s ease;
    -ms-transition: right 1s ease;
    -o-transition: right 1s ease;
}

/* layer-panel style图层 */
.layer-panel{
    position: absolute;
    top: 40px;
    background: #141719;
    width: 200px;
    height: calc(100vh - 40px);
    z-index: 1;
}
.layer-panel.status01{
    left: 0;
    transition: left 1s ease;
    -webkit-transition: left 1s ease;
    -moz-transition: left 1s ease;
    -ms-transition: left 1s ease;
    -o-transition: left 1s ease;
}
.layer-panel.status02{
    left: -200px;
    transition: left 1s ease;
    -webkit-transition: left 1s ease;
    -moz-transition: left 1s ease;
    -ms-transition: left 1s ease;
    -o-transition: left 1s ease;
}

.layer-list{
    user-select: none;
}
.layer-list li{
    color: #fff;
    height: 36px;
    line-height: 36px;
    padding: 0 10px;
    cursor: pointer;
}
.layer-list li:hover{
    background: #202325;
}
.layer-list li i{
    font-size: 18px;
    vertical-align: top;
    margin-right: 5px;
}
.layer-list li span{
    display: inline-block;
    width: 150px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 13px;
    vertical-align: top;
}

