/* 该文件是home页的样式 */
/*头部*/
.phead{
	width:100%;
	min-width: 1300px;
	height:40px;
	position:absolute;
	top:0;
	left:0;
	z-index:999;
}
.head_con{
    height:40px;
    background:url(../../static/images/head_bg.jpg) repeat-x center center;
    background-size:cover;
}
.head_con .left{
    height:100%;
    float:left;
    overflow: hidden;
}
.head_con .left span{
    display:block;
    height:100%;
    width: 200px;
    float: left;
    background:url(../../static/images/logo.png) no-repeat center center;
    background-size:auto 46px;
}
.head_con .left b{
	display: block;
	float: left;
	font-size:20px;
	color:#fff;
    font-weight: normal;
	margin-left: 20px;
	line-height: 40px;
}
.head_con .right{
    float:right;
    height:40px;
    line-height:40px;
    padding-right:30px;
}
.head_con .right span{
    font-size:14px;
    color:#fff;
    font-weight:200;
    padding:0 10px;
    background:url(../../static/images/head_icon_06.png) no-repeat right center;
    cursor: pointer;
}
.head_con .right span small{
    font-size:14px;
    color:#fff;
    font-weight:200;
}

.head_con .right span.exit{
	padding-right:20px;
    background:url('../../static/images/head_icon_12.png') no-repeat right center;
}

/* sidebar */
/*侧边栏*/
.psidebar{
    width:200px;
    height:100%;
    background:#3d4851;
    position:absolute;
    top:0;
    left:0;
    z-index:99;
    overflow: auto;
}
.psidebarinner{
    padding-top:50px;
}
.sidebar_list{
    background:#3d4851;
}
.sidebar_list ul{
	margin-bottom: 0;
	padding:0;
}
.sidebar_list ul li{
    position: relative;
}

.sidebar_list ul li a{
    display: block;
    padding-left:12px;
    color:#728798;
    cursor: pointer;
    -webkit-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
.sidebar_list ul li a i{
    vertical-align: middle;
    color: #fff;
}
.sidebar_list ul li a span{
    display: inline-block;
    font-size:14px;
    height:36px;
    line-height:36px;
    margin-left: 5px;
    color: #fff;
    -webkit-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
.sidebar_list ul li.active{
    background: #5c6871;
}
.sidebar_list ul li.active:after{
    content: "";
    width: 3px;
    height: 100%;
    background-color: #57bcfb;
    position: absolute;
    top: 0;
    left: 0;
}
.sidebar_list ul li.active a span{
    -webkit-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

/* 首页视图区域 */
.page-container{
    position: absolute;
    top: 40px;
    left: 200px;
    width: calc(100% - 200px);
    height: calc(100vh - 40px);
    box-sizing: border-box;
    padding: 10px;
}

.visaul-history-item{
    background: #3d4851;
    color: #fff;
    height: 240px;
    overflow: hidden;
    border: 2px solid transparent;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -ms-border-radius: 4px;
    -o-border-radius: 4px;
}
.visaul-history-item:hover{
    border: 2px solid #1c6dff;
}
.visaul-history-item .visual-item-poster{
    position: relative;
    height: 180px;
    background-color: #585d61;
    background-image: url(../images/visual-poster.png);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
}
.visaul-history-item .visual-item-operate{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: all .3s ease;
    -webkit-transition: all .3s ease;
    -moz-transition: all .3s ease;
    -ms-transition: all .3s ease;
    -o-transition: all .3s ease;
}
.visaul-history-item .visual-item-operate button{
    margin: 0 5px;
}
.visaul-history-item:hover .visual-item-operate{
    opacity: 1;
    transition: all .3s ease;
    -webkit-transition: all .3s ease;
    -moz-transition: all .3s ease;
    -ms-transition: all .3s ease;
    -o-transition: all .3s ease;
}
.visaul-history-item ul{
    padding: 10px;
}
.visaul-history-item ul li{
    line-height: 20px;
}
.visaul-history-item ul li span{
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 20px;
}
.visaul-history-item ul li span.visual-item-name{
    font-size: 14px;
    width: 80%;
}
.visaul-history-item ul li span.visual-item-date{
    font-size: 12px;
    width: 100%;
}