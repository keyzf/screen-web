/* 该文件是针对antd样式的重置 */
/* common */
.screen-editor-page{
    label{
        color #fff
        line-height 32px
    }
    .ant-input,
    .ant-input-affix-wrapper,
    .ant-select-selector,
    .ant-select-single:not(.ant-select-customize-input) .ant-select-selector{
        background-color transparent!important
        color #fff
    }
    .ant-input-affix-wrapper{
        .ant-input-prefix,
        .ant-input-suffix{
            color #fff
        }
    }
    .ant-select-arrow{
        color #fff
    }
    .ant-form-item{
        margin-bottom 10px
    }
    .ant-collapse-content{
        overflow visible
    }
    .ant-input-number{
        background-color transparent
        color #fff
        .ant-input-number-handler-wrap{
            background-color transparent
        }
        .ant-input-number-handler-up-inner, 
        .ant-input-number-handler-down-inner{
            color #fff
        }
    }
    .ant-switch{
        background-color #828282
    }
    .ant-switch-checked{
        background-color #1890ff
    }
}
.dark-style{
    .ant-select-item-option:not(.ant-select-item-option-disabled){
        background #464646
        color #fff
    }
    .ant-select-item-option-active:not(.ant-select-item-option-disabled){
        background #717171
        color #fff
    }
    .ant-select-item-option-selected:not(.ant-select-item-option-disabled){
        background #5f5e5e
        color #fff
    }
}

/* modules reset 组件集中覆盖antdesign样式 */
.modules-panel{
    .ant-tabs{
        .ant-tabs-left-bar .ant-tabs-tab,
        .ant-tabs-right-bar .ant-tabs-tab{
            padding 0
            width 40px
            height 40px
            text-align center
            line-height 40px
            color #fff
            background #464646
        }
        .ant-tabs-nav .ant-tabs-tab-active{
            color #1890ff
            background #545353
        }
        .ant-tabs-left-content{
            padding 0 5px
            border-left none
        }
    }
}
/* setting reset 配置面板中覆盖antdesign样式 */
.setting-form-tab{
    .ant-tabs-bar{
        margin-bottom 10px
        border-bottom 1px solid #464646
    }
    .ant-tabs-nav-wrap .ant-tabs-nav{
        width 100%
        .ant-tabs-tab{
            margin 0
            width 50%
            text-align center
            color #fff
            &.ant-tabs-tab-active{
                color #1890ff
            }
        }
    }
}
.setting-form-wrap{
    .ant-collapse-borderless{
        background-color transparent
        color #fff
        & > .ant-collapse-item{
            border-bottom 1px solid #464646
        }
    }
    .ant-collapse > .ant-collapse-item > .ant-collapse-header{
        color #fff
    }
    .ant-form-item-label > label{
        color #fff
    }
}